@model UserProfileViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="profile-header d-flex align-items-center mb-4">
                <img src="@Model.ProfileImage" alt="Profile" class="rounded-circle" width="50" height="50" />
                <h2 style="margin-left: 20px;"  class="mb-0">@Model.Username</h2>
            </div>

            <form asp-action="UpdateProfile" method="post">
                <div class="form-group row mb-4">
                    <label asp-for="Username" class="col-sm-2 col-form-label text-right">User Name:</label>
                    <div class="col-sm-10">
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label asp-for="FullName" class="col-sm-2 col-form-label text-right">Full Name:</label>
                    <div class="col-sm-10">
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label asp-for="PhoneNumber" class="col-sm-2 col-form-label text-right">Phone number:</label>
                    <div class="col-sm-10">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <label asp-for="EmailAddress" class="col-sm-2 col-form-label text-right">E-mail:</label>
                    <div class="col-sm-10">
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>